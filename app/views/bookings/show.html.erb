<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-center">
        <div class="card-booking p-3 mt-3 mb-3">
          <h2>Ma réservation</h2>
          <% @booking.bike.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <div class="card-booking-infos">
            <div class="d-flex flex-column align-content-between">
              <p><strong>Date de début</strong>: <%= @booking.start_date.strftime("%A, %b %d") %></p>
              <p><strong>Date de fin</strong>: <%= @booking.end_date.strftime("%A, %b %d") %></p>
            </div>
            <h2 class=""><strong>Prix total</strong>: <%= @booking.total_price %>€</h2>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center book_show">
        <%= link_to booking_path(@booking), method: :delete, data: { confirm: 'Etes-vous certain de vouloir supprimer votre réservation ?'} do %>
          <p>Pour supprimer: <i class="fas fa-trash-alt pr-1" style="color: gray"></i></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

