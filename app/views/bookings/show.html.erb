<div class="container">
    <div class="text-center">
      <div class="card-booking">
        <h2 style="color: gray">Ma réservation</h2>
        <% @booking.bike.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
        <div class="card-booking-infos">
          <div>
            <p> <%= @booking.start_date.strftime("%A, %b %d") %> </p>
            <p> <%= @booking.end_date.strftime("%A, %b %d") %> </p>
          </div>
          <h2 class="card-booking"> <%= @booking.total_price %> </h2>
        </div>
      </div>
      <%= link_to booking_path(@booking), method: :delete, data: { confirm: 'Etes-vous certain de vouloir supprimer votre réservation ?'} do %>
      <i class="fas fa-trash-alt pr-1" style="color: gray"></i>
      <% end %>
    </div>
</div>

