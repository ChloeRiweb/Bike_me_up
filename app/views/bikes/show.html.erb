<div class="container">
  <h2><%= @bike.model %></h2>
  <div class="infos d-flex justify-content-between">
    <div class="note">
      <p><i class="far fa-star"></i> 4,5 - 8 locations - <%= @bike.address %></p>
    </div>
    <div class="share">
      <p><i class="fas fa-share-alt"></i> Partager - <i class="far fa-bookmark"></i> Enregistrer</p>
    </div>
  </div>
  <div class="photos">
    <div class="card-bike">
      <% @bike.photos.each do |photo| %>
        <%= cl_image_tag photo.key, crop: :fill %>
    <% end %>
  </div>
  <div class="details d-flex flex-column ">
    <div class="type-couleur">
      <i class="fas fa-restroom"></i> Type : <%= @bike.gender %>
      <i class="fas fa-palette"></i> Couleur : <%= @bike.color %>
    </div>

    <div class="style-vitesses">
      <i class="fas fa-bicycle"></i> Type : <%= @bike.style %>
      <i class="fas fa-cog"></i> Vitesses : <%= @bike.gear %>
    </div>

  </div>








  <div class="row justify-content-center">
    <div class="col-6">
      <%= link_to bike_path(@bike), method: :delete, data: { confirm: 'Etes-vous certain de vouloir supprimer votre annonce ?'} do %>
          <i class="far fa-trash-alt"></i>
      <% end %>
      <div class="card-bike">
        <% @bike.photos.each do |photo| %>
          <%= cl_image_tag photo.key, crop: :fill %>
        <% end %>
        <div class="card-bike-infos">
          <div>
            <h2> <%= @bike.model %> </h2>
            <p> <%= @bike.description %> </p>
            <p> <%= @bike.gender %> </p>
            <p> <%= @bike.color %> </p>
            <p> <%= @bike.gear %> </p>
            <p> <%= @bike.style %> </p>
          </div>
          <h2 class="card-bike-pricing"> <%= @bike.price %> </h2>
        </div>
      </div>
    </div>
  </div>
</div>
