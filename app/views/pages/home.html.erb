<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1523891046626-daa31d9e280f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="d-flex flex-column align-items-center">
          <h1>Bike me <strong>UP</strong>!</h1>
          <p>Louez un vélo à <span id="banner-typed-text"></span>.</p>
          <%= link_to "Nos vélos", bikes_path, class:"btn btn-flat"  %>
        </div>
        <div class="d-flex justify-content-center mt-3">
          <%= form_tag bikes_path, method: :get do %>
            <%= text_field_tag :global_search,
              params[:global_search],
              class: "form-control",
              placeholder: "Trouver un vélo"
            %>
            <%= submit_tag "Pédaler", class: "btn btn-flat" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
